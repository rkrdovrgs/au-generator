{
    "exclude": [
        "app",
        "aurelia_project",
        "node_modules",
        "templates"
    ],
    "include": [
        "./src/**/*.ts",
        "../custom_typings/models/*.d.ts"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "preserveConstEnums": false,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es6",
            "dom"
        ],
        "typeRoots": [
            "../node_modules/@types",
            "../node_modules/au-base/custom_typings",
            "../custom_typings"
        ]
    }
}